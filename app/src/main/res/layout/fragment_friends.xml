<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_background"
    tools:context="faskteam.faskandroid.contollers.main_controllers.social.TabFriendsFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_friends_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <include
            android:id="@+id/list"
            layout="@layout/generic_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </android.support.v4.widget.SwipeRefreshLayout>

    <View
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="4dp"
        android:background="@drawable/box_shadow_bottom"
        />



</RelativeLayout>
