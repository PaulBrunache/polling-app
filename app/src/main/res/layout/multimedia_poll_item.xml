<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/ui_element_spacing"
                android:layout_marginTop="@dimen/activity_vertical_margin"
    >

    <RadioButton
        android:id="@+id/multimedia_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/multimedia_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ui_element_spacing"
        android:layout_marginStart="@dimen/ui_element_spacing"
        android:layout_toRightOf="@+id/multimedia_radio_button"
        android:layout_toEndOf="@+id/multimedia_radio_button"
        />

</RelativeLayout>