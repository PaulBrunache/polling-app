<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="faskteam.faskandroid.contollers.main_controllers.ProfileFragment"
    android:background="@color/color_off_white">

    <ImageView
        android:id="@+id/background_photo"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/color_dark_grey"
        android:contentDescription=""/>


    <LinearLayout
        android:id="@+id/gam_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/background_photo"
        android:background="@color/color_off_white_dark"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="110dp"
        android:paddingStart="110dp"
        android:paddingRight="0dp"
        android:paddingEnd="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                android:textStyle="bold"
                style="@style/AppTheme.TextView.Link"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="12345"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bla"
                android:textStyle="bold"
                style="@style/AppTheme.TextView.Link"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="12345"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textStyle="bold"
        style="@style/AppTheme.TextView.Inverse"
        android:layout_above="@+id/gam_info"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/ui_element_spacing"
        android:layout_toRightOf="@+id/profile_user_avatar"
        android:layout_toEndOf="@+id/profile_user_avatar"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_user_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/background_photo"
        android:layout_marginTop="-45dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"

        android:src="@color/color_dark_grey"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/color_white"/>

</RelativeLayout>
