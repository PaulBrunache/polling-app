<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <SearchView
        android:id="@+id/group_member_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:queryHint="@string/group_member_add"/>

    <TextView
        android:id="@+id/group_members_string"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/group_members_string"
        android:layout_below="@id/group_member_add"/>

    <include
        android:id="@+id/group_members"
        layout="@layout/generic_recycler_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_members_string"/>

</RelativeLayout>