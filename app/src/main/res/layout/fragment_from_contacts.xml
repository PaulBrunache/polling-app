<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="faskteam.faskandroid.contollers.main_controllers.social.AddFriendsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Contacts"
            style="@style/AppTheme.TextAppearance.Bold"
            />

        <include layout="@layout/generic_recycler_view"
                 android:id="@+id/phone_contacts_list"
                 android:layout_height="0dp"
                 android:layout_width="match_parent"
                 android:layout_weight=".5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook Contacts"
            style="@style/AppTheme.TextAppearance.Bold"
            />

        <include layout="@layout/generic_recycler_view"
                 android:id="@+id/facebook_contacts_list"
                 android:layout_height="0dp"
                 android:layout_width="match_parent"
                 android:layout_weight=".5"
            />
    </LinearLayout>


</RelativeLayout>
