<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/locations_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans_serif"
        android:textSize="12sp"
        android:textColor="@color/color_text_primary_light"
        android:text="@string/group_location_text"
        android:layout_below="@id/poll_create_tabs"/>

    <SearchView
        android:id="@+id/search_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:queryHint="@string/search_loc_to_poll"
        android:layout_below="@id/locations_choose"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:apiKey="AIzaSyDS7ydkVPRvGamatmM3d8IQkPJxEaPPkyE"
        android:layout_below="@+id/search_location"/>



</RelativeLayout>